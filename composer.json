{
  "name": "json-api-php/json-api",
  "description": "jsonapi.org",
  "type": "library",

  "license": "MIT",
  "authors": [
    {
      "name": "Alexey Karapetov",
      "email": "karapetov@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.0",
    "friendsofphp/php-cs-fixer": "^2.2"
  },
  "autoload": {
    "psr-4": {
      "JsonApiPhp\\JsonApi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "JsonApiPhp\\JsonApi\\Test\\": "test/"
    }
  },
  "scripts": {
    "test": "php-cs-fixer fix -v --dry-run --ansi && phpunit --colors=always"
  }
}
